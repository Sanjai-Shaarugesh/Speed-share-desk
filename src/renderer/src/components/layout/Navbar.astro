---
// File: Navbar.astro
import { githubLink } from '../../configs';
import Github from '../icons/Github.astro';
import SunMoon from '../icons/SunMoon.astro';
import { ModeToggle } from '@/components/ModeToggle';
---

<div
  class="navbar w-full items-center justify-between px-4"
  style="
    padding-top: max(env(safe-area-inset-top), 3rem);
    padding-left: max(env(safe-area-inset-left), 1.5rem);
    padding-right: max(env(safe-area-inset-right), 1.5rem);
  "
>
  <!-- Left Side -->
  <div class="navbar-start">
    <SunMoon />
    <!-- <ModeToggle client:load /> -->
  </div>

  <!-- Center Title -->
  <div class="navbar-center">
    <h1 class="text-2xl md:text-4xl font-bold animate-pulse">Speed-share</h1>
  </div>

  <!-- Right Side -->
  <div class="navbar-end">
    <a
      aria-label="Github"
      href={githubLink}
      target="_blank"
      rel="noopener noreferrer"
      class="btn btn-ghost btn-square normal-case"
    >
      <Github />
    </a>
  </div>
</div>
